@page "/folders"
@using Fylum.Client.Folders
@using Fylum.Folders.Api.Shared
@using MudBlazor
@inject IFolderClient FolderClient
@inject ISnackbar Snackbar

<MudText Typo="Typo.h4" Class="mb-4">Browse folders</MudText>

@if (_isLoading)
{
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-7" />
}
else if (_currentFolder == null)
{
    <MudAlert Severity="Severity.Warning">No Folders found or an error occured while loading.</MudAlert>
    <MudButton Variant="Variant.Text" Color="Color.Primary" OnClick="LoadRoot">Try again</MudButton>
}
else
{
    <MudPaper Class="pa-4">
        <MudStack Row="true" AlignItems="AlignItems.Center" Class="mb-4">
            <MudIcon Icon="@Icons.Material.Filled.FolderOpen" Size="Size.Large" />
            <MudText Typo="Typo.h5">@_currentFolder.Name</MudText>
        </MudStack>
        
        <MudDivider Class="mb-4" />

        <MudList T="object">
            @if (_childFolders != null && _childFolders.Any())
            {
                @foreach (var folder in _childFolders)
                {
                    <MudListItem Icon="@Icons.Material.Filled.Folder" OnClick="@(() => LoadFolder(folder.FolderId))">
                        @folder.Name
                    </MudListItem>
                }
            }
            else
            {
                <MudText Typo="Typo.body2" Class="pa-4 text-muted">This folder is empty.</MudText>
            }
        </MudList>
    </MudPaper>
    
    @if (_currentFolder.ParentFolderId != Guid.Empty) 
    {
        <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Material.Filled.ArrowBack" 
                   Color="Color.Secondary" Class="mt-4" 
                   OnClick="@(() => LoadFolder(_currentFolder.ParentFolderId))">
            Back
        </MudButton>
    }
}

@code {
    private bool _isLoading = true;
    
    // Wir verwenden hier die Response-Objekte aus dem Shared-Projekt als Model
    private GetFolderResponse? _currentFolder;
    private List<GetFolderResponse> _childFolders = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadRoot();
    }

    private async Task LoadRoot()
    {
        _isLoading = true;
        try
        {
            // Abruf des Root-Ordners
            // GetRootFolderAsync liefert direkt das GetFolderResponse Objekt zurück
            _currentFolder = await FolderClient.GetRootFolderAsync();
            
            if (_currentFolder != null)
            {
                await LoadChildren(_currentFolder.FolderId);
            }
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error while loading the root folder: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task LoadFolder(Guid folderId)
    {
        _isLoading = true;
        try
        {
            // Abruf eines spezifischen Ordners anhand der ID
            _currentFolder = await FolderClient.GetFolderByIdAsync(folderId);
            
            await LoadChildren(folderId);
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading this folder: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task LoadChildren(Guid parentId)
    {
        try 
        {
            // Abruf der Unterordner
            var response = await FolderClient.GetChildFoldersAsync(parentId);
            
            // Annahme: Die Property im Response heißt 'Folders' und ist eine Liste von GetFolderResponse
            _childFolders = response.Folders.ToList();
        }
        catch (Exception ex)
        {
             Snackbar.Add($"Could not load the child folders: {ex.Message}", Severity.Error);
             _childFolders = new List<GetFolderResponse>();
        }
    }
}